<config>
    <modules>
        <Herve_JsTranslate>
            <version>1.0.0.0</version>
        </Herve_JsTranslate>
    </modules>
    
    <global>
        <helpers>
            <jstranslate>
                <class>Herve_JsTranslate_Helper</class>
            </jstranslate>
        </helpers>
    </global>
    
    <frontend>
        <routers>
            <jstranslate>
                <use>standard</use>
                <args>
                    <module>Herve_JsTranslate</module>
                    <frontName>jstranslate</frontName>
                </args>
            </jstranslate>
        </routers>
        <translate>
            <modules>
                <Herve_JsTranslate>
                    <files>
                        <default>Herve_JsTranslate.csv</default>
                    </files>
                </Herve_JsTranslate>
            </modules>
        </translate>
        <layout>
            <updates>
                <jstranslate>
                    <file>jstranslate.xml</file>
                </jstranslate>
            </updates>
        </layout>        
    </frontend>
</config>
